<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:background="@color/shadows">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sent_code_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Отправили код на example@mail.ru"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Напишите его, чтобы подтвердить, что это вы, а не кто-то другой входит в личный кабинет"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            
            <EditText
                android:id="@+id/auth_code_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:background="@drawable/bg_edit_text"/>

            <EditText
                android:id="@+id/auth_code_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:background="@drawable/bg_edit_text"/>

            <EditText
                android:id="@+id/auth_code_3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:background="@drawable/bg_edit_text"/>

            <EditText
                android:id="@+id/auth_code_4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxLines="1"
                android:maxLength="1"
                android:inputType="number"
                android:background="@drawable/bg_edit_text"/>
            
        </LinearLayout>
        
        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_blue_8"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Подтвердить"/>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>